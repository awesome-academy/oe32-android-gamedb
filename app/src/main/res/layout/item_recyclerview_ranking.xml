<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@drawable/shape_edge">

    <ImageView
        android:id="@+id/imageRanking"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRankingGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageRanking"
        app:layout_constraintTop_toTopOf="@id/imageRanking" />

    <ImageView
        android:id="@+id/image1stRankingPlatform"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/imageRanking"
        app:layout_constraintStart_toEndOf="@id/imageRanking" />

    <ImageView
        android:id="@+id/image2ndRankingPlatform"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/image1stRankingPlatform"
        app:layout_constraintStart_toEndOf="@id/image1stRankingPlatform" />

    <ImageView
        android:id="@+id/image3rdRankingPlatform"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@+id/image2ndRankingPlatform"
        app:layout_constraintStart_toEndOf="@+id/image2ndRankingPlatform" />

    <ImageView
        android:id="@+id/image4thRankingPlatform"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/image3rdRankingPlatform"
        app:layout_constraintStart_toEndOf="@id/image3rdRankingPlatform" />

    <ImageView
        android:id="@+id/image5thRankingPlatform"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/image4thRankingPlatform"
        app:layout_constraintStart_toEndOf="@id/image4thRankingPlatform" />

    <ImageView
        android:id="@+id/imageCommentRanking"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_60"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@id/imageRanking"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/imageCommentRanking"
        app:layout_constraintStart_toEndOf="@id/imageCommentRanking"
        app:layout_constraintTop_toTopOf="@id/imageCommentRanking" />

    <ImageView
        android:id="@+id/imageFav"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/ic_favourite"
        app:layout_constraintBottom_toBottomOf="@id/imageRanking"
        app:layout_constraintEnd_toStartOf="@id/imageCommentRanking" />

</androidx.constraintlayout.widget.ConstraintLayout>
